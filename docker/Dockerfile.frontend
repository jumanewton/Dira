# Dockerfile for React frontend
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY frontend/package*.json ./

# Install dependencies
RUN npm config set fetch-retry-maxtimeout 600000 && npm install

# Copy source
COPY frontend/ ./

# Build
RUN npm run build

# Serve
RUN npm install -g serve
EXPOSE 3000
CMD ["serve", "-s", "build", "-l", "3000"]