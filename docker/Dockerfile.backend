# Dockerfile for Jac backend
FROM python:3.10-slim

WORKDIR /app

# Install build dependencies
RUN apt-get clean && rm -rf /var/lib/apt/lists/* && apt-get update --fix-missing && apt-get install -y build-essential && rm -rf /var/lib/apt/lists/*

# Install Jaseci/Jaclang
RUN pip install jaclang==0.9.3

# Copy Jac files
COPY backend/jac/ ./jac/

# Expose port
EXPOSE 8000

# Run
CMD ["jac", "serve", "jac/main.jac"]